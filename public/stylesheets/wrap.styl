@import 'vendor'

text-glow-animation(glowInclude, #ff0000, #00D4FF, 1em)

div#bodyWrap
  display inline-block
  width 900px
  border solid 1px normalBorder

h1#logo
  display inline-block
  margin 0
  padding 0
  &:hover
    animation-name            glowInclude;
    animation-duration        3s;
    animation-iteration-count infinite;
    animation-timing-function linear;
    
h1#logo a
  color #fff

ul#menuList
  display inline-block
  margin 0
  padding 0
  width 100%
  vertical-align top
  box-shadow 0 2px 8px #000; 

ul#menuList li
  display inline-block

ul#menuList li a
  display block
  padding 8px 0 8px 0
  width 64px
  font-weight 900
  //font-family 'NanumGothicBold'
  color rgba(0,0,0,0)
  text-shadow 0 0 1px aColor
  &:hover
    background-gradient bottom, rgba(0,0.3,0.3,0.3), rgba(0,0,0,0)
    text-shadow 0 0 aColor
    color aColor
  &:active
    color aColor
    background-gradient bottom,rgba(0,0,0,0), rgba(0,0.3,0.3,0.3)
    text-shadow -1px -1px #000

ul#menuList li a.redLink
  color rgba(0,0,0,0)
  text-shadow 0 0 1px aRedColor
  &:hover
    background-gradient bottom, rgba(0,0.3,0.3,0.3), rgba(0,0,0,0)
    text-shadow 0 0 aRedColor
  &:active
    color aRedColor
    background-gradient bottom,rgba(0,0,0,0), rgba(0,0.3,0.3,0.3)
    text-shadow -1px -1px #000

div#contentWrap
  margin 0 16px 16px 16px

div#footerWrap
  background normalBorder
  padding 1px
  &:hover
    animation-name            glowInclude;
    animation-duration        3s;
    animation-iteration-count infinite;
    animation-timing-function linear;
    
div#cover
  display none
  position fixed
  top 0
  width 100%
  height 100%
  background #000
  opacity 0

div#popup
  display none
  width 400px
  height 200px
  background backColor
  border-radius 0.4em
  border solid 1px lightBorder
  box-shadow 0 10px 40px 10px #000

div#popup span#popupMessage
  display block
  padding 32px
  font-size 1.5em
  font-weight bold
  text-align center
  height 80px

div#popup button
  display inline-block
  margin 0 32px 0 32px
  width 72px
  